<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/number_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edt_bck"
        android:gravity="center"
        android:hint="Number"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:singleLine="true"
        android:textSize="20sp" />

    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/delete_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete this number"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/sms_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send text sms to number"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/call_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make phone call to number"
        android:textAllCaps="false" />
</LinearLayout>